generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  nombre  String
  email   String   @unique
  pedidos Pedido[]
}

model Product {
  id       Int    @id @default(autoincrement())
  nombre   String
  precio   Float
  stock    Int
  img      String
  cantidad Int
}

model Pedido {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productos String
  total     Float
  fecha     DateTime @default(now())
}
