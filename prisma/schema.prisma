generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int      @id @default(autoincrement())
  name              String
  surname           String
  email             String   @unique
  password          String 
  avatarColor       String   @default("#F7B267")
  avatarTextColor   String   @default("#6B4F4F")
  
  pedidos Pedido[]
}

model Product {
  id       Int    @id @default(autoincrement())
  nombre   String @unique
  precio   Float
  stock    Int
  img      String  
  cantidad Int  
  categoria String
}

model Pedido {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productos String  
  total     Float
  status    String   @default("COMPLETED")
  fecha     DateTime @default(now())
}
